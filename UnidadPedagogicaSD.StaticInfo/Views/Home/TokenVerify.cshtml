@model UnidadPedagogicaSD.StaticInfo.Models.RegistroModel
@{
    ViewBag.Title = "Verificación";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Html.Raw(TempData["msg"])
}

<br /><br />
<br />
<h5>Ingrese el token de registro</h5>

<hr />
<div class="login-page" style="max-width:100%;height:auto">
    <div class="form text-center table-bordered" id="example">
        <h4>Verificación de Token</h4>


        @using (Html.BeginForm("TokenVerify", "Home", FormMethod.Post, new { @class = "text-center border border-light p-5" }))
        {
            <div class="col-md-6 col-md-offset-3 text-center">

                @Html.PasswordFor(model => model.token, new { placeholder = "Secret Token", @class = "form-control text-center" })
                <br />
            </div>
            <br />

            <button type="submit" class="btn btn-success">Continuar Registro</button>


            <br />



        }
        <br />
    </div>


</div>


<br /> <br /> <br /> <br /> <br /> <br />

<script>
    $('#example').hide(0).delay(100).fadeIn(300);

</script>



@section Scripts
{

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>


    <script type="text/javascript">
        $('#token').on('keypress', function (e) {


            $("#token").attr('maxlength', '25');
        });
    </script>



}