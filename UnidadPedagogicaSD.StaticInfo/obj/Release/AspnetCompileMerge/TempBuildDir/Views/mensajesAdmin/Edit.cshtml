@model UnidadPedagogicaSDStaticInfo.DAL.mensajex

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Activar Comunicados</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idMensaje)

        <div class="form-group">
            @Html.Label("Comunicado", htmlAttributes: new { @class = "control-label col-md-2" })
       
                <div class="col-lg-10 ">
                    @Html.TextAreaFor(model => model.cuerpo, new { @class = "form-control bg-primary", required = "required", rows = "15", style = "width: 65%; max-width: 65%;" })

                    @Html.ValidationMessageFor(model => model.cuerpo, "", new { @class = "text-danger" })
                </div>
         
        </div>

        <div class="form-group">
            @Html.Label("Fecha del Comunicado", htmlAttributes: new { @class = "control-label col-md-2", @Readonly= "readonly" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @Readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Docente", "idUsuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idUsuario", null, htmlAttributes: new { @class = "form-control", @Readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Visibilidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    <select id="visible" name="visible" class="form-control">
                        <option value="0">NO visible</option>
                        <option value="1">Visible</option>

                    </select>
                    @Html.ValidationMessageFor(model => model.visible, "", new { @class = "text-danger" })
                </div>
            </div>
          
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Terminar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
