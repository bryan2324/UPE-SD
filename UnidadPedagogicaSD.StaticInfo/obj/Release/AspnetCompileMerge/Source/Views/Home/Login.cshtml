@model UnidadPedagogicaSDStaticInfo.DAL.usuariox
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/Style.css");
    @Html.Raw(TempData["msg"])
}
<br />
<br />
<br />
<br />
<div class="login-page" id="example" style="max-width:100%;height:auto">
    <div class="form" style="border:inset;background-color:white">
        <h4 style="text-align:center">Inicio de Sesión</h4> <br />


        @using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post, new { @class = "login-form", Style = "text-align: center;" }))
        {
            <br /> <br />
            <div class="col-lg-11 pull-right">
                @Html.TextBoxFor(model => model.cedula, new { placeholder = "Cedula", @class = "form-control control" })
            </div>
            <br /> <br /> <br />
            <div class="col-lg-11 pull-right">
                @Html.PasswordFor(model => model.pass, new { placeholder = "Password", @class = "form-control" })
            </div>
            <br /> <br /> <br />

            <div class="center-block">
                <button type="submit" class="btn btn-lg btn-success">Iniciar Sesión</button>
            </div>
            <br />
            <br /> <br />

            <div>
                @Html.ActionLink("Registrarse Ahora", "TokenVerify", "Home")
            </div>
        }

        <br />
        <br />
    </div>
    <br />
    <br /> <br />
    <br />

</div>
@section Scripts
{

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js">


    </script>
    <script type="text/javascript">
        $('#cedula').on('keypress', function (e) {
            if (!$.isNumeric(String.fromCharCode(e.which))) {
                e.preventDefault();
            }
        });

        $("#cedula").attr('maxlength', '9');
    </script>

}
<script>
    $('#example').hide(0).delay(200).fadeIn(400);

</script>