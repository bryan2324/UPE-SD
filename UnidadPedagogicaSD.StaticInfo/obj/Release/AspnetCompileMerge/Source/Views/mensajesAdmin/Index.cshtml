@model IEnumerable<UnidadPedagogicaSDStaticInfo.DAL.mensajex>

@{
    ViewBag.Title = "Comunicados";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br /><br /><br />

<h3 class="text-primary">Comunicados de la Institución</h3>
<hr />
<br />
<p>
    @Html.ActionLink("Crear Comunicado", "Create")
</p>
<table class="table" style="table-layout:fixed;width:100%">
    <tr>
        <th class="col-sm-2" style="background-color:lavender;overflow-wrap:break-word">
            @Html.DisplayName("Docente")
        </th>



        <th class="col-sm-7" style="background-color:darkgray;overflow-wrap:break-word">
            @Html.DisplayName("Comunicado")
        </th>

        <th class="col-sm-1" style="overflow-wrap:break-word">
            @Html.DisplayName("Fecha")
        </th>
        <th class="col-sm-1" style="overflow-wrap:break-word">
            @Html.DisplayName("Visibilidad")
        </th>
        <th class="col-sm-1" style="overflow-wrap:break-word">
            @Html.DisplayName("Acciones")
        </th>

    </tr>

    @foreach (var item in Model.Reverse())
    {
        <tr>

            <td style="overflow-wrap:break-word">
                @Html.DisplayFor(modelItem => item.usuariox.nombre)
            </td>
            <td style="overflow-wrap:break-word">
                @Html.DisplayFor(modelItem => item.cuerpo)
            </td>
            <td style="overflow-wrap:break-word">
                @Html.DisplayFor(modelItem => item.fecha)
            </td>

            @{
                if (item.visible == 1)
                {
                    <td>
                        Visible
                    </td>
                }
                else
                {
                    <td>
                        NO Visible
                    </td>
                }

            }





            <td>
                @Html.ActionLink("Cambiar Visibilidad", "Edit", new { id = item.idMensaje }) <br /> <br />
                @*@Html.ActionLink("Detalles", "Details", new { id = item.idMensaje }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idMensaje })
            </td>
        </tr>
    }

</table>
<br /><br />
