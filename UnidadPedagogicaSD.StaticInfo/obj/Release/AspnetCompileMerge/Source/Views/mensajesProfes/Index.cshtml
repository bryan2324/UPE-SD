@model IEnumerable<UnidadPedagogicaSDStaticInfo.DAL.mensajex>

@{
    ViewBag.Title = "Comunicados";
    Layout = "~/Views/Shared/_LayoutProfe.cshtml";
}

<br /><br /><br /><br /><br />

<h3 class="text-primary">Comunicados de la Institución</h3>
<hr />
<br />

<p>
    @Html.ActionLink("Crear Comunicado", "Create")
</p>
<table class="table" style="margin:0;padding:0;table-layout:fixed;width:100%">
    <tr>
        <th class="col-sm-2" style="background-color:lavender;">
            @Html.DisplayName("Docente")
        </th>



        <th class="col-sm-7" style="background-color:darkgray;overflow-wrap:break-word">
            @Html.DisplayName("Comunicado")
        </th>

        <th class="col-sm-1">
            @Html.DisplayName("Fecha")
        </th>
        <th class="col-sm-1">
            @Html.DisplayName("Visibilidad")
        </th>
        @*<th>
            @Html.DisplayName("Acciones")
        </th>*@

        
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.usuariox.nombre)
        </td>
        <td style="overflow-wrap:break-word">
            @Html.DisplayFor(modelItem => item.cuerpo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        @{
            if (item.visible == 1)
            {
                <td>
                    Visible
                </td>
            }
            else
            {
                <td>
                    NO Visible
                </td>
            }

        }
    
    </tr>
    }

</table>
